{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "rootDir": "./",
      "resolveJsonModule": true,
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": false,
      "sourceMap": false,
      "moduleResolution": "Node",
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitAny": true
    },
    "include": ["./**/*"],
    "exclude": ["./node_modules", "./token.ts", "./config.ts"]
  }
